<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.scorekeeperapp.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="TEAM A"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="247dp"
                tools:layout_editor_absoluteY="3dp" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="0"
                android:textSize="30dp"
                android:fontFamily="sans-serif-medium"
                tools:layout_editor_absoluteX="57dp"
                tools:layout_editor_absoluteY="33dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:onClick="addOneForTeamA"
                android:text="+1"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="60dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:onClick="minusOneTeamA"
                android:text="-1"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="117dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:onClick="winnerA"
                android:text="WIN"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="165dp" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="TEAM B"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="247dp"
                tools:layout_editor_absoluteY="3dp" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="0"
                android:textSize="30dp"
                android:fontFamily="sans-serif-medium"
                tools:layout_editor_absoluteX="247dp"
                tools:layout_editor_absoluteY="33dp" />


            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:onClick="addOneForTeamB"
                android:text="+1"
                tools:layout_editor_absoluteX="247dp"
                tools:layout_editor_absoluteY="117dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:onClick="minusOneTeamB"
                android:text="-1"
                tools:layout_editor_absoluteX="247dp"
                tools:layout_editor_absoluteY="60dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:onClick="winnerB"
                android:text="WIN"
                tools:layout_editor_absoluteX="247dp"
                tools:layout_editor_absoluteY="174dp" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="TEAM C"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="247dp"
                tools:layout_editor_absoluteY="3dp" />

            <TextView
                android:id="@+id/team_c_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="0"
                android:textSize="30dp"
                android:fontFamily="sans-serif-medium"
                tools:layout_editor_absoluteX="57dp"
                tools:layout_editor_absoluteY="33dp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:onClick="addOneForTeamC"
                android:text="+1"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="60dp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:onClick="minusOneTeamC"
                android:text="-1"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="117dp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:onClick="winnerC"
                android:text="WIN"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="165dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="50dp"
        android:onClick="reset"
        android:text="RESET"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team_a_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="0"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="33dp" />

        <TextView
            android:id="@+id/team_b_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="0"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="33dp" />

        <TextView
            android:id="@+id/team_c_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="0"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="33dp" />
    </LinearLayout>

</LinearLayout>
